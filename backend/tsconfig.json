{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",                  // â† wajib ini (atau "NodeNext")
    "moduleResolution": "node",          // atau "NodeNext" kalau Node >=16
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}